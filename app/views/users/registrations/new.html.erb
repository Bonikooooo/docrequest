<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "users/shared/error_messages", resource: resource %>
<div class="p-2 vw-auto vh-100 bg-primary">
<div class="card text-center mt-4 m-auto" style="width: 50vw">
<div class="card-body">
<h3 class="card-title bi bi-backpack fs-2"> Sign Up</h3>
  <div class="field form-group mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
  </div>

  <div class="field form-group mb-3">
    <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", class: "form-control", placeholder: "Fullname (Last name, Given Name, M.I.)" %>
  </div>

  <div class="field form-group mb-3">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password (6 Characters Minimum)" %>
  </div>

  <div class="field form-group mb-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
    <%= link_to "Back", :back, class: "btn btn-primary btn-lg" %>
  </div>
  </div>
  </div>
  </div>
<% end %>


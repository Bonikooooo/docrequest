<%= form_with(model: request) do |form| %>
  <% if request.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
        <% request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group mb-3">
    <%= form.text_field :fullname, class: "form-control", placeholder: "Fullname (Last name, Given Name, M.I.)" %>
  </div>
 
  <div class="field form-group mb-3">
    <%= form.text_field :student_number, class: "form-control", placeholder: "Student Number" %>
  </div>


<div class="field form-group mb-3">
    <%= form.text_field :request_reason , class: "form-control", placeholder: "Reason for requesting" %>
  </div>

    <div class="field form-group mb-3 text-start">
    <%= form.select :document, F138_G10:"Form 138 GR 10", F138_G11:"Form 138 GR 11", F138_G12:"Form 138 GR 12", Cert_Registration:"Certificate of Registration", Cert_NonEnrollment:"Certificate of Non-Enrollment", Cert_GoodMoral:"Certificate of Good Moral", Cert_UpperPercantage:"Certificate of Upper Percentage", Cert_Ranking:"Certificate of Ranking", Cert_Completion:"Certificate of Completion", Cert_MediumOfInstruction:"Certificate of Medium of Instruction", F137_SHSgraduatingstudent:"Form 137 SHS(for Graduated Student)", F137_CollegeAdmission:"Form 137 for College admision", CAV:"Certification, Authentication and Verification", Diploma:"Diploma"%>
  </div>

  <div class="field form-group mb-3">
    <%= form.number_field :user_id, id: :request_user_id, class: "form-control", value: current_user.id, type: :hidden%>
  </div>

  <div class="actions">
    <%= form.submit "Create Request", class:"btn btn-primary btn-lg" %>
  </div>
<% end %>
